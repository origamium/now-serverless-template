{
    "name": "fastly-test",
    "version": "1.0.0",
    "license": "MIT",
    "engines": {
        "node": "12.x"
    },
    "scripts": {
        "typecheck": "tsc --noEmit",
        "lint:ts": "eslint ./api/**/*.ts --cache",
        "lint:json": "prettier \"*.json\"",
        "lint:fix:ts": "yarn lint:ts --fix",
        "lint:fix:json": "yarn lint:json --write",
        "lint": "run-p -l -n -c --aggregate-output lint:*",
        "lint:fix": "run-p -l -n -c --aggregate-output lint:fix:*"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn typecheck",
            "yarn lint:fix:ts",
            "git add"
        ],
        "*.{json}": [
            "yarn lint:fix:json",
            "git add"
        ]
    },
    "dependencies": {
        "fastify": "2.14.1"
    },
    "devDependencies": {
        "@now/node": "1.7.0",
        "@types/node": "12.12.47",
        "@typescript-eslint/eslint-plugin": "3.2.0",
        "@typescript-eslint/parser": "3.2.0",
        "eslint": "7.2.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-prettier": "3.3.1",
        "husky": "4.2.5",
        "lint-staged": "10.2.10",
        "npm-run-all": "4.1.5",
        "prettier": "2.0.5",
        "ts-loader": "7.0.5",
        "typescript": "3.9.5",
        "webpack": "4.43.0",
        "webpack-cli": "3.3.11"
    }
}
